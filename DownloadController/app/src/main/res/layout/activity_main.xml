<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.project.downloadcontroller.MainActivity">

    <TextView
        android:id="@+id/downloadBucket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#32b100"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <TextView
        android:id="@+id/mapDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ff4000"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/downloadBucket" />

    <TextView
        android:id="@+id/getState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#005eff"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@+id/mapDownloads" />

</android.support.constraint.ConstraintLayout>
