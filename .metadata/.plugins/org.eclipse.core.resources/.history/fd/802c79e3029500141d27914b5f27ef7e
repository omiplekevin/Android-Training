package com.example.basicservice;

import android.app.Activity;
import android.content.ComponentName;
import android.content.Context;
import android.content.Intent;
import android.content.ServiceConnection;
import android.os.Bundle;
import android.os.IBinder;
import android.view.Menu;
import android.view.MenuItem;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;
import android.widget.Toast;

import com.example.service.CustomService;
import com.example.service.CustomService.CustomBinder;

public class MainActivity extends Activity implements OnClickListener {

	Button startService, stopService;
	Intent i;
	CustomService customService;
	boolean binded = false;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);

		startService = (Button) findViewById(R.id.button1);
		startService.setOnClickListener(this);
		stopService = (Button) findViewById(R.id.button2);
		stopService.setOnClickListener(this);

		i = new Intent(this, CustomService.class);
		i.putExtra("KEY1", "VALUE");

	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}

	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		// Handle action bar item clicks here. The action bar will
		// automatically handle clicks on the Home/Up button, so long
		// as you specify a parent activity in AndroidManifest.xml.
		int id = item.getItemId();
		if (id == R.id.action_settings) {
			return true;
		}
		return super.onOptionsItemSelected(item);
	}

	@Override
	protected void onResume() {
		// TODO Auto-generated method stub
		Intent intent = new Intent(this, CustomService.class);
		bindService(intent, serviceConnection, Context.BIND_AUTO_CREATE);
		binded = true;
		super.onResume();
	}

	@Override
	protected void onPause() {
		// TODO Auto-generated method stub
		super.onPause();
		if(!binded) {
			unbindService(serviceConnection);
		}
	}
	
	private ServiceConnection serviceConnection = new ServiceConnection() {

		@Override
		public void onServiceConnected(ComponentName name, IBinder service) {
			// TODO Auto-generated method stub
			CustomBinder binder = (CustomBinder) service;
			customService = (CustomService) binder.getService();
			Toast.makeText(getApplicationContext(), "Connected to service", Toast.LENGTH_SHORT).show();
		}

		@Override
		public void onServiceDisconnected(ComponentName name) {
			// TODO Auto-generated method stub
			customService = null;
			Toast.makeText(getApplicationContext(), "Disconnected to service", Toast.LENGTH_SHORT).show();
		}
		
	};

	@Override
	public void onClick(View v) {
		// TODO Auto-generated method stub
		switch (v.getId()) {
		case R.id.button1:
			Toast.makeText(getApplicationContext(), "Started Service", Toast.LENGTH_SHORT).show();
			binded = true;
			startService(i);
			break;
		case R.id.button2:
			stopService(new Intent(this, CustomService.class));
			binded = false;
			Toast.makeText(getApplicationContext(), "Stopped Service", Toast.LENGTH_SHORT).show();
			break;
		}
	}
}
