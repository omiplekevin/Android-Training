package com.example.flickrpublicfeeds.adapter;

import java.net.MalformedURLException;
import java.net.URL;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.os.AsyncTask;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.ImageView;
import android.widget.TextView;

import com.example.flickrpublicfeeds.R;

public class CustomListViewAdapter extends BaseAdapter{

	JSONArray items;
	Context context;
	
	public CustomListViewAdapter(Context context, JSONArray items) {
		this.items = items;
		this.context = context;
	}
	
	@Override
	public int getCount() {
		// TODO Auto-generated method stub
		return items.length();
	}

	@Override
	public Object getItem(int arg0) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public long getItemId(int arg0) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public View getView(int arg0, View convertView, ViewGroup arg2) {
		// TODO Auto-generated method stub
		ViewHolder holder;
		if(convertView == null) {
			holder = new ViewHolder();
			convertView = View.inflate(context, R.layout.listview_single_item, null);
			
			holder.image = (ImageView)convertView.findViewById(R.id.imageView1);
			holder.title = (TextView)convertView.findViewById(R.id.textView1);
			holder.link = (TextView)convertView.findViewById(R.id.textView2);
			
			convertView.setTag(holder);
		} else {
			holder = (ViewHolder)convertView.getTag();
		}
		
		/*new AsyncTask<Void, Void, Bitmap>() {

			@Override
			protected Bitmap doInBackground(Void... params) {
				// TODO Auto-generated method stub
				return null;
			}
		};*/
		String imageSrc = "";
		String title = "";
		String link = "";
		
		try {
			JSONObject obj = items.getJSONObject(arg0);
			JSONObject obj2 = obj.getJSONObject("media");
			imageSrc = obj2.getString("m");
			
			title = items.getJSONObject(arg0).getString("title");
			link = items.getJSONObject(arg0).getString("link");
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		new AsyncTask<String, Void, Bitmap>(){

			@Override
			protected Bitmap doInBackground(String... params) {
				// TODO Auto-generated method stub
				
				URL url;
				try {
					url = new URL(params[0]);
					Bitmap bmp = BitmapFactory.decodeStream(url.openConnection().getInputStream());
				} catch (MalformedURLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				return null;
			}
			
		};
		
		holder.title.setText(title);
		holder.link.setText(link);
		
		return convertView;
	}
	
	static class ViewHolder{
		ImageView image;
		TextView title;
		TextView link;
	}

}
