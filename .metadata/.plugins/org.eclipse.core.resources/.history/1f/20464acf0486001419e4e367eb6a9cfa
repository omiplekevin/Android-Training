package com.example.gridviewsample;

import android.app.Activity;
import android.os.Bundle;
import android.util.Log;
import android.widget.GridView;
import android.widget.SeekBar;
import android.widget.SeekBar.OnSeekBarChangeListener;

public class MainActivity extends Activity{

	GridView gridView;
	CustomGridAdapter adapter;
	SeekBar seekBar;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);

		int imageRes[] = new int[100];
		for(int i=0;i<100;i++) {
			imageRes[i] = R.drawable.ic_launcher;
		}
		
		gridView = (GridView) findViewById(R.id.gridView1);
		seekBar = (SeekBar) findViewById(R.id.seekBar1);
		seekBar.setOnSeekBarChangeListener(new OnSeekBarChangeListener() {
			
			@Override
			public void onStopTrackingTouch(SeekBar seekBar) {
				// TODO Auto-generated method stub
				Log.e("SEEKBAR", "onStopTrackingTouch");
			}
			
			@Override
			public void onStartTrackingTouch(SeekBar seekBar) {
				// TODO Auto-generated method stub
				Log.e("SEEKBAR", "onStartTrackingTouch");
			}
			
			@Override
			public void onProgressChanged(SeekBar seekBar, int progress,
					boolean fromUser) {
				// TODO Auto-generated method stub
				Log.e("SEEKBAR", "onProgressChanged " + progress);
				if(progress > 0) {
					gridView.setNumColumns(seekBar.getProgress());
					gridView.invalidate();
				}
				
			}
		});
		
		adapter = new CustomGridAdapter(getApplicationContext(), imageRes);
		
		gridView.setAdapter(adapter);

	}

}
