package com.example.service;

import java.util.Random;
import java.util.concurrent.atomic.AtomicBoolean;

import android.app.Service;
import android.content.Intent;
import android.os.AsyncTask;
import android.os.Binder;
import android.os.IBinder;
import android.util.Log;

public class CustomService extends Service {

	AtomicBoolean stop = new AtomicBoolean(Boolean.FALSE);
	private final IBinder binder = new CustomBinder();

	@Override
	public int onStartCommand(Intent intent, int flags, int startId) {		
		new AsyncTask<Intent, Void, Void>() {

			@Override
			protected Void doInBackground(Intent... params) {
				Random rand = new Random();
				while (!stop.get()) {
					int i = rand.nextInt(100);
					Log.e("SERVICE", "random: " + rand.nextInt(100));
					try {
						Thread.sleep(5000);
					} catch (InterruptedException e) {
						e.printStackTrace();
					}
				}
				return null;
			}
		}.execute(intent);
		return Service.START_NOT_STICKY;
	}

	@Override
	public IBinder onBind(Intent intent) {
		// TODO Auto-generated method stub
		return binder;
	}

	public class CustomBinder extends Binder {
		public CustomService getService() {
			return CustomService.this;
		}
	}

	@Override
	public void onDestroy() {
		// TODO Auto-generated method stub
		stop.set(Boolean.TRUE);
		super.onDestroy();
	}

}
