<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_flip_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omiplekevin.android.f45testbench.FlipAnimationActivity">

    <TextView
        android:id="@+id/flipTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:text="MOVE STATION"/>

    <TextView
        android:id="@+id/flipTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:color/holo_green_dark"
        android:textSize="30dp"
        android:text="STAY IN POD"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flip"
            android:onClick="flip"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reverse"
            android:onClick="reverse"/>
    </LinearLayout>

</FrameLayout>
