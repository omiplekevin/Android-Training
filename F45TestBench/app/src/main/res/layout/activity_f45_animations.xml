<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_f45_animations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.omiplekevin.android.f45testbench.F45Animations">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/circle_frame" />

        <!--spacer-->
        <FrameLayout
            android:id="@+id/trickSpacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/rhsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/trickSpacer"
            android:layout_toEndOf="@id/trickSpacer"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:src="@drawable/movement_arrow_left_long" />

        <ImageView
            android:id="@+id/lhsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/trickSpacer"
            android:layout_toStartOf="@id/trickSpacer"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:src="@drawable/movement_arrow_right_long" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/heartBeat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/work_station_icon"/>

        <ImageView
            android:id="@+id/handStop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/stop_hand_new"/>
    </LinearLayout>


</RelativeLayout>
