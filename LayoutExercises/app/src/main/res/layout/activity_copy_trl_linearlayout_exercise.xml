<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.omiplekevin.layoutexercises.MainActivity">

    <View
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/cellOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dot"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/dot"
        android:background="#69a0bc"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/idea" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you know" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cellTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dot"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/dot"
        android:background="#d68f8f"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="that Android OS" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cellThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/dot"
        android:layout_toStartOf="@id/dot"
        android:background="#7cc785"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/cash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="was originally used for" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cellFour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/dot"
        android:layout_toEndOf="@id/dot"
        android:background="#a99177"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/photo_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CAMERAS?" />
    </LinearLayout>

</RelativeLayout>
